{
  "name": "comicif-monorepo",
  "version": "1.0.0",
  "description": "Comicif monorepo with backend and frontend applications",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "backend:build": "npm run build --workspace=apps/backend",
    "backend:start": "npm run start --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend",
    "frontend:build": "npm run build --workspace=apps/frontend",
    "frontend:start": "npm run start --workspace=apps/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "monorepo",
    "backend",
    "frontend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {}
}
